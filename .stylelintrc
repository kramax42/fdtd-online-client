{
  "extends": [
    "stylelint-config-standard",
    "stylelint-config-standard-scss", 
    "stylelint-order-config-standard"
            ],
  "formatter": "stylelint-checkstyle-formatter",
  "plugins": [
    "stylelint-order",
    "stylelint-scss"
  ],

  "rules": {
    "selector-class-pattern": "^[a-z][a-zA-Z0-9_-]+$",
    "selector-id-pattern": "^[a-z][a-zA-Z0-9_-]+$"
  }
}
